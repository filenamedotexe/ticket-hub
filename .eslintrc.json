{
  "root": true,
  "extends": ["eslint:recommended", "next/core-web-vitals"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es2022": true,
    "browser": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "no-unused-vars": "error"
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "dist/",
    "build/",
    "public/sw.js",
    "public/workbox-*.js",
    "public/worker-*.js"
  ],
  "overrides": [
    {
      "files": ["apps/web/**/*.{ts,tsx}"],
      "extends": ["next/core-web-vitals"],
      "env": {
        "browser": true
      }
    }
  ]
}
